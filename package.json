    "date-fns": "^4.1.0",
    "firebase": "^12.9.0",
    "pocketbase": "^0.10.2",
    "uuid": "^13.0.0",
    "vue": "^3.5.28",
    "vue-router": "^5.0.2"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.15.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vitejs/plugin-vue-jsx": "^5.1.4",
    "@vue/eslint-config-typescript": "^14.x",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.x",
    "eslint-plugin-vue": "^10.8.0",
    "gh-pages": "^6.3.0",
    "jsdom": "^27.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vue-tsc": "^3.2.4"
